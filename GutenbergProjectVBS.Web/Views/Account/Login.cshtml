@using GutenbergProjectVBS.Web.Models.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Login Page";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-6 col-lg-6 col-md-6">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                @if (ViewBag.UserNotFound != null)
                {
                    <div class="px-3 py-3 bg-gradient-danger text-white">
                        @ViewBag.UserNotFound
                    </div>
                }
                @if (TempData["UserCreateSuccess"] != null)
                {
                    <div class="px-3 py-3 bg-gradient-success text-white">
                        @TempData["UserCreateSuccess"]
                    </div>
                }
                @if (TempData["UserLoginFail"] != null)
                {
                    <div class="px-3 py-3 bg-gradient-danger text-white">
                        @TempData["UserLoginFail"]
                    </div>
                }
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Visual Bookshelf</h1>
                            </div>
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "user" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-user", placeholder = "Enter Email Address..." })
                                    @Html.ValidationMessageFor(x => x.Email)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-user", placeholder = "Password", type = "password" })
                                    @Html.ValidationMessageFor(x => x.Password)
                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Login">
                            }
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/Account/ForgotPassword">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Account/Register">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>