@using GutenbergProjectVBS.Web.Models.ViewModels
@model ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-6 col-lg-6 col-md-6">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="px-3 py-3 bg-gradient-danger text-white">
                        @ViewBag.ErrorMessage
                    </div>
                }
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="px-3 py-3 bg-gradient-success text-white">
                        @ViewBag.SuccessMessage
                    </div>
                }
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Reset Password</h1>
                            </div>
                            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "user" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control form-control-user", type = "password", placeholder = "New password.." })
                                    @Html.ValidationMessageFor(x => x.NewPassword)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control form-control-user", type = "password", placeholder = "Confirm password.." })
                                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                                </div>
                                @Html.HiddenFor(x => x.ResetCode)
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Reset Password">
                            }
                            <hr />
                            <div class="text-center">
                                <a class="small" href="/Account/Register">Create an Account!</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Account/Login">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>