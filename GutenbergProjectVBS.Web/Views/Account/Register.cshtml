@using GutenbergProjectVBS.Web.Models.ViewModels
@model RegisterViewModel
@{
    ViewBag.Title = "Register Page";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-6 col-lg-6 col-md-6">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                @if (ViewBag.UserExists != null)
                {
                    <div class="px-3 py-3 bg-gradient-danger text-white">
                        @ViewBag.UserExists
                    </div>
                }
                <!-- Nested Row within Card Body -->

            <div class="p-5">
                <div class="text-center mb-4">
                    <h1 class="h4 text-gray-900">Create an Account!</h1>
                    <small class="text-danger">You must fill the required fields with *</small>
                </div>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "user" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Name*" } })
                            @Html.ValidationMessageFor(x => x.Name)
                        </div>
                        <div class="col-sm-6">
                            @Html.EditorFor(x => x.Surname, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Surname*" } })
                            @Html.ValidationMessageFor(x => x.Surname)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Email Address*" } })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Password*" } })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                        <div class="col-sm-6">
                            @Html.EditorFor(x => x.PasswordConfirm, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Repeat Password*" } })
                            @Html.ValidationMessageFor(x => x.PasswordConfirm)
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Register Account">
                }
                <hr>
                <div class="text-center">
                    <a class="small" href="/Account/ForgotPassword">Forgot Password?</a>
                </div>
                <div class="text-center">
                    <a class="small" href="/Account/Login">Already have an account? Login!</a>
                </div>
            </div>
            </div>
        </div>
     </div>
</div>